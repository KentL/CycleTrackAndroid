<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#aaaaee"
                android:endColor="#bbbbff"
                android:type="linear"
                android:angle="270"
                />
            <size android:width="80dp" android:height="80dp"></size>
        </shape>
    </item>

    <item android:gravity="center"
        android:top="20dp" android:left="20dp" android:bottom="20dp" android:right="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#aaaaaa" />
        </shape>
    </item>
    <item android:gravity="center"
        android:top="20dp" android:left="50dp" android:bottom="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#aaaaaa" />
        </shape>
    </item>
</layer-list>

